# File Share Network - Environment Configuration

# Application
PROJECT_NAME=File Share Network
API_PREFIX=/api/v1

# Security
SECRET_KEY=CHANGE_ME
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database - SQLite (default)
DATABASE_URL=sqlite:///./network_app.db

# Network Settings
TCP_HOST=0.0.0.0
TCP_PORT=9000
TCP_SSL_PORT=9001
MULTICAST_GROUP=224.1.1.1
MULTICAST_PORT=5007
GRPC_PORT=50051

# Email (configure if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# File Upload
UPLOAD_DIR=static/uploads
MAX_FILE_SIZE=52428800
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.pdf,.doc,.docx,.xls,.xlsx,.txt

# SSL
SSL_CERT_FILE=ssl_certs/server.crt
SSL_KEY_FILE=ssl_certs/server.key

# Debug
DEBUG_TOKEN_ENDPOINT=false
